#:kivy 2.0.0

MDScreen:
    name: "main"
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        Image:
            source: "assets/images/back.png"
            size_hint: .9, .9
            pos_hint: {"center_x": .5, "center_y": .66}
        MDLabel:
            text: "H e l l o !"
            font_name: "BPoppins"
            font_size: "23sp"
            pos_hint: {"center_y": .47}
            halign: "center"
            color: rgba(34, 34, 34, 255)
        MDLabel:
            text: "Best place to write life stories and share your journey experiences"
            font_name: "MPoppins"
            font_size: "13sp"
            size_hint_x: .85
            pos_hint: {"center_x": .5, "center_y": .4}
            halign: "center"
            color: rgba(127, 127, 127, 255)
        Button:
            id: btnLogin
            text: "LOGIN"
            size_hint: .60, .065
            pos_hint: {"center_x": .5, "center_y": .23}
            background_color: 0, 0, 0, 0
            font_name: "BPoppins"
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "login"
            canvas.before:
                Color:
                    rgb: rgba(52, 0, 231, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
        Button:
            text: "REGISTER"
            color: rgba(34, 34, 34, 255)
            size_hint: .60, .065
            pos_hint: {"center_x": .5, "center_y": .15}
            background_color: 0, 0, 0, 0
            font_name: "BPoppins"
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "signup"
            canvas.before:
                Color:
                    rgb: rgba(52, 0, 231, 255)
                Line:
                    width: 1.2
                    rounded_rectangle: self.x, self.y, self.width, self.height, 5, 5, 5, 5, 100