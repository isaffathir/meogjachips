#:kivy 2.0.0

MDScreen:
    name: "home"
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        MDLabel:
            id: name
            text: ""
            font_name: "MPoppins"
            font_size: "13sp"
            size_hint_x: .85
            pos_hint: {"center_x": .5, "center_y": .75}
            halign: "center"
            color: rgba(0, 0, 59, 255)
        MDLabel:
            id: userName
            text: ""
            font_name: "MPoppins"
            font_size: "13sp"
            size_hint_x: .85
            pos_hint: {"center_x": .5, "center_y": .65}
            halign: "center"
            color: rgba(0, 0, 59, 255)
        MDLabel:
            id: email
            text: ""
            font_name: "MPoppins"
            font_size: "13sp"
            size_hint_x: .85
            pos_hint: {"center_x": .5, "center_y": .55}
            halign: "center"
            color: rgba(0, 0, 59, 255)
        Button:
            text: "LOGOUT"
            background_color: 0, 0, 0, 0
            pos_hint: {"center_y": .3,"center_x": .5}
            size_hint: .3, .065
            font_name: "BPoppins"
            on_press: app.doLogout()
            canvas.before:
                Color:
                    rgb: rgba(52, 0, 231, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos